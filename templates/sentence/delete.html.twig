{% extends 'sentence/new.html.twig' %}

{% block title %}Delete Sentence{% endblock %}
{% block header_title %}Delete a Sentence{% endblock %}
{% block header_detail %}in {{ document.title }}{% endblock %}

{% block content %}
    <div class="{{ cssgrid }}">
        <article> 
            <div>
                <p>Are you sure you want to delete '{{ key }}' ?</p>
                {%  if inbound|length > 0  %}
                    <p>There are {{ inbound|length }} Sentence(s) that point to '{{ key }}' :</p>
                    <ul>
                        {% for sentence in inbound %}
                            <li>{{ sentence.key }}</li>
                            {% endfor %}
                    </ul>
                {% endif %}
            </div>
            {{ form(form) }}     
        </article>
    </div>
{% endblock %}