<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="/css/pure-min.css"/>
            <link rel="stylesheet" href="/css/grids-responsive-min.css"/>
            <link rel="stylesheet" href="/css/mobile.css"/>
            <link rel="stylesheet" href="/css/app.css"/>
            <link rel="stylesheet" href="/css/fontello.css"/>
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% set cssgrid='pure-u-xl-1-3 pure-u-md-1-2 pure-u-1-1' %}
            <div class="pure-g mobile">
                <div class="{{ cssgrid }} {% block header_class %}neutral{% endblock %}">
                    <header>
                        {% block header %}
                            <h1>{% block header_title %}Title{% endblock %}</h1>
                            <div>{% block header_detail %}Description{% endblock %}</div>
                            <footer>
                                {% block header_footer %}Footer{% endblock %}
                            </footer>
                        {% endblock %}
                    </header> 
                </div>
                {% block content %}
                    {% for item in listing %}
                        <div class="{{ cssgrid }}">
                            <article>
                                {% block item_article %}
                                    <h2>{% block article_title %}Title{% endblock %}</h2>
                                    <div class="content">
                                        {% block article_content %}Nothing{% endblock %}
                                    </div>
                                    <footer>
                                        {% block article_footer %}Footer{% endblock %}
                                    </footer>
                                {%  endblock %}
                            </article>       
                        </div>
                    {% endfor %}
                {% endblock %}
            </div> 
        {% endblock %}
    </body>
    {% block javascripts %}{% endblock %}
</html>
