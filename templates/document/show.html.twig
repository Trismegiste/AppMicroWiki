{# templates/crud/show.html.twig #}
{% extends 'base.html.twig' %}
{%  block title %}
    {{  doc.title }} - {{ doc.description }}
{%  endblock %}
{% block body %}
    <section class="pure-g document">
        <header class="pure-u-xl-1-3 pure-u-md-1-2 pure-u-1-1">
            <h1>{{ doc.title }}</h1>
            <h2>{{ doc.description }}</h2>
            <a href="{{ path('app_documentcrud_append', {title: doc.title}) }}">Append</a>
        </header> 
        {% for vertex in doc %}
            <article {% if vertex.key == focus %}style="background-color: pink"{% endif %} class="pure-u-xl-1-3 pure-u-md-1-2 pure-u-1-1">
                <h3>{{ vertex.key }} ({{ vertex.category }})</h3>
                <div>{{ vertex.content|wiki(doc.title) }}</div>
                <footer>
                    <a href="{{ path('app_documentcrud_edit', {key:vertex.key, title:doc.title}) }}">Edit</a>
                </footer>
            </article>
        {% endfor %}
    </section>
{% endblock %}